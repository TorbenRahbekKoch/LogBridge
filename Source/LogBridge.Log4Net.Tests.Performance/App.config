<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <appSettings>
    <add key="SoftwarePassion.LogBridge.InternalDiagnosticsEnabled" value="true"/>
    <add key="SoftwarePassion.LogBridge.LogWrapperAssembly" value="LogBridge.Log4Net, Version=1.1.4.0, Culture=neutral, PublicKeyToken=null"/>
  </appSettings>

  <log4net>
    <appender name="MemoryAppender" type="log4net.Appender.MemoryAppender"/>

    <root>
      <level value="ALL" />
      <!--<appender-ref ref="LogFileAppender" />-->
      <appender-ref ref="MemoryAppender" />
    </root>

    <logger name="RootLogger" Additivity="true">
      <level value="ALL"/>
      <!--<appender-ref ref="MemoryAppender"/>-->
    </logger>

  </log4net>
  
  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>

  <system.diagnostics>
    <trace autoflush="true">
      <listeners>
        <add
            name="textWriterTraceListener"
            type="System.Diagnostics.TextWriterTraceListener"
            initializeData="C:\log\logbridge.txt" />
      </listeners>
    </trace>
  </system.diagnostics>
  
</configuration>